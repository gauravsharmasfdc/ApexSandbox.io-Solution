public void createCourseAndClass(String name, String description) {
    createCourse(name,description);
    createClass(name,description);
}

public void createCourse(String name, String description) {
    apxio__Course__c  course = new apxio__Course__c();
    course.Name = name;
    if(String.isNotBlank(description))
        course.apxio__Course_Details__c = description;

    Insert course;
}

public void createClass(String name, String description) {
    apxio__Class__c class  = new apxio__Class__c();
    class.Name = name;
    class.apxio__Description__c = description.left(255);
    insert class;
}