public Boolean companionPlants(String plant1, String plant2) {
    map<String, String> companions = new Map<String,String>();
    companions.put('lettuce','cucumbers');
    companions.put('cucumbers','lettuce');
    companions.put('lettuce','onions');
    companions.put('onions','lettuce');
    companions.put('onions','carrots');
    companions.put('carrots','onions');
    companions.put('onions','tomatoes');
    companions.put('tomatoes','onions');

    return (companions.get(plant1) == plant2);

}