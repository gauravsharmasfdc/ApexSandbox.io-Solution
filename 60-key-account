public Boolean isKeyAccount(Account a) {
    final Decimal DEFAULT_REVENUE_THRESHOLD = 500000;
    final Map<String,Decimal> INDUSTRY_REVENUE_THRESHOLDS  = new Map<String,Decimal>{
        'Banking' => 600000,
        'Technology' => 800000,
        'Retail' => 2000000
    };



    return (
            (INDUSTRY_REVENUE_THRESHOLDS.containsKey(a.Industry) && a.AnnualRevenue >= INDUSTRY_REVENUE_THRESHOLDS.get(a.Industry)) ||
            (!INDUSTRY_REVENUE_THRESHOLDS.containsKey(a.Industry) && a.AnnualRevenue >= DEFAULT_REVENUE_THRESHOLD)
        );
}